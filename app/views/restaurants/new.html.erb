<div class="container mt-3">
<h2>New restaurant</h2>
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category %>
    <%= f.submit "Add new restaurant", class: 'btn btn-primary my-4' %>
  <% end %>
</div>
